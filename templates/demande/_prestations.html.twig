<div class="row g-4">
    {% for prestation in prestations %}
        <div class="col-12 col-sm-6 col-lg-4">
            <label class="prestation-card h-100 shadow-sm border-0 cursor-pointer d-block position-relative">
                <input class="prestation-checkbox d-none" type="checkbox" name="prestations[]" value="{{ prestation.id }}">
                
                {% if prestation.prix %}
                    <div class="price-tag">{{ prestation.prix }} DT</div>
                {% endif %}

                <div class="card-body d-flex flex-column bg-white rounded p-3">
                    <h5 class="card-title mb-1">{{ prestation.titre }}</h5>
                    <p class="card-text text-muted small mb-2">{{ prestation.description }}</p>
                    {% if prestation.duree %}
                        <span class="badge bg-info text-dark mt-auto">{{ prestation.duree }}</span>
                    {% endif %}
                </div>
            </label>
        </div>
    {% else %}
        <div class="col-12">
            <p class="text-muted fst-italic text-center">Aucune prestation disponible pour cette cat√©gorie.</p>
        </div>
    {% endfor %}
</div>

