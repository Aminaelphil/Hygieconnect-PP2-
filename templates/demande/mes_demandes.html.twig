{% extends 'base.html.twig' %}

{% block title %}Mes demandes{% endblock %}

{% block body %}
<div class="container py-5">
<div class="one">
  <h1>Voici la liste de vos demandes</h1>
</div>


{% set isAdmin = 'ROLE_ADMIN' in app.user.roles %}

{% if demandes is empty %}
    <p class="text-muted fs-5">Vous n'avez encore créé aucune demande.</p>
{% else %}
    <div class="d-flex flex-wrap gap-4">
        {% for demande in demandes %}
            <div class="card demande-card shadow-sm flex-grow-1" style="min-width: 280px; max-width: 350px;">
                <div class="card-header d-flex justify-content-between align-items-center bg-white border-0 pb-0">
                    <div>
                        <h5 class="mb-0">Demande N°{{ demande.id }}</h5>
                        <small class="text-muted">{{ demande.datedemande|date('d/m/Y H:i') }}</small>
                    </div>
                    {% set statut = demande.statut %}
                    {% if statut == 'en attente' %}
                        <span class="badge bg-warning text-dark">{{ statut|capitalize }}</span>
                    {% elseif statut == 'en cours' %}
                        <span class="badge bg-info text-white">{{ statut|capitalize }}</span>
                    {% elseif statut == 'acceptée' %}
                        <span class="badge bg-success">{{ statut|capitalize }}</span>
                    {% elseif statut == 'annulée' %}
                        <span class="badge bg-danger">{{ statut|capitalize }}</span>
                    {% elseif statut == 'refusée' %}
                        <span class="badge bg-secondary">{{ statut|capitalize }}</span>
                    {% else %}
                        <span class="badge bg-secondary">{{ statut|capitalize }}</span>
                    {% endif %}
                </div>

                <div class="card-body d-flex flex-column">
                    <p class="mb-1"><strong>Adresse :</strong> {{ demande.adresseprestation }}</p>
                    <p class="mb-1"><strong>Nature :</strong> {{ demande.naturedemandeur }}</p>

                    <div class="mt-auto d-flex justify-content-between align-items-center gap-2 flex-wrap">
                        {% if demande.devisestime %}
                            <a href="{{ path('app_demande_pdf', {'id': demande.id}) }}" class="btn btn-primary btn-sm flex-grow-1" target="_blank">
                                Télécharger Devis
                            </a>
                        {% endif %}

                        {# Actions selon le rôle #}
                        {% if isAdmin %}
                            {% if statut != 'annulée' and statut != 'acceptée' and statut != 'refusée' %}
                                <div class="d-flex gap-1 flex-grow-1">
                                    <form action="{{ path('app_demande_accepter', {'id': demande.id}) }}" method="post" style="flex:1;">
                                        <button type="submit" class="btn btn-success btn-sm w-100">Accepter</button>
                                    </form>
                                    <form action="{{ path('app_demande_refuser', {'id': demande.id}) }}" method="post" style="flex:1;">
                                        <button type="submit" class="btn btn-warning btn-sm w-100">Refuser</button>
                                    </form>
                                    <form action="{{ path('app_demande_annuler', {'id': demande.id}) }}" method="post" style="flex:1;">
                                        <button type="submit" class="btn btn-danger btn-sm w-100">Annuler</button>
                                    </form>
                                </div>
                            {% endif %}
                        {% else %}
                            {# Pour un client normal : bouton annuler seulement si non annulée #}
                            {% if statut != 'annulée' %}
                                <form action="{{ path('app_demande_annuler', {'id': demande.id}) }}" method="post" style="flex-grow: 1;">
                                    <button type="submit" class="btn btn-danger btn-sm w-100" onclick="return confirm('Voulez-vous vraiment annuler cette demande ?');">
                                        Annuler
                                    </button>
                                </form>
                            {% endif %}
                        {% endif %}
                    </div>

                    <button class="btn btn-h btn-sm mt-3 w-100" type="button" data-bs-toggle="collapse" data-bs-target="#details-{{ demande.id }}">
                        Voir détails
                    </button>
                </div>

                <div class="collapse" id="details-{{ demande.id }}">
                    <div class="card-body shadow-sm rounded-4 mt-3 bg-white">
                        <h6 class="text-primary fw-bold mb-2">Prestations :</h6>
                        <ul class="list-unstyled mb-3">
                            {% for prestation in demande.prestations %}
                                <li class="d-flex justify-content-between border-bottom py-1">
                                    <span>{{ prestation.titre }}</span>
                                    <span class="fw-semibold text-secondary">{{ prestation.prix }} DT / jour</span>
                                </li>
                            {% endfor %}
                        </ul>

                        <div class="row g-2">
                            <div class="col-md-4">
                                <p class="mb-1"><strong>Date début :</strong> {{ demande.datedebut ? demande.datedebut|date('d/m/Y') : '-' }}</p>
                            </div>
                            <div class="col-md-4">
                                <p class="mb-1"><strong>Date fin :</strong> {{ demande.datefin ? demande.datefin|date('d/m/Y') : '-' }}</p>
                            </div>
                            <div class="col-md-4">
                                <p class="mb-0"><strong>Infos :</strong> {{ demande.infossupplementaires ?: '-' }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
</div>


<style>
body {
        background-image: url('{{ asset('images/background1.jpg') }}');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        background-attachment: fixed;
    }
    /* === BASE HEADING === */ 

h1 {
  position: relative;
  padding: 0;
  margin: 0;
  font-family: "Raleway", sans-serif;
  font-weight: 300;
  font-size: 40px;
  color: #080808;
  -webkit-transition: all 0.4s ease 0s;
  -o-transition: all 0.4s ease 0s;
  transition: all 0.4s ease 0s;
}

h1 span {
  display: block;
  font-size: 0.5em;
  line-height: 1.3;
}
h1 em {
  font-style: normal;
  font-weight: 600;
}

/* === HEADING STYLE #1 === */
.one h1 {
  text-align: center;
  text-transform: uppercase;
  padding-bottom: 5px;
}
.one h1:before {
  width: 28px;
  height: 5px;
  display: block;
  content: "";
  position: absolute;
  bottom: 3px;
  left: 50%;
  margin-left: -14px;
  background-color: #0065b8ff;
}
.one h1:after {
  width: 100px;
  height: 1px;
  display: block;
  content: "";
  position: relative;
  margin-top: 25px;
  left: 50%;
  margin-left: -50px;
  background-color: #003ab8ff;
}

.demande-card {
    border-radius: 15px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.demande-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 30px rgba(0, 0, 0, 0.08);
}

.btn-primary, .btn-outline-primary {
    background: linear-gradient(135deg, #007bff, #0056b3);
    border: none;
    color: #fff;
    font-weight: 600;
    border-radius: 50px;
    text-transform: uppercase;
    transition: all 0.3s ease;
}
.btn-primary:hover, .btn-outline-primary:hover {
    background: linear-gradient(135deg, #0056b3, #003580);
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(0, 91, 187, 0.4);
    color: #fff;
}

.btn-danger {
    background-color: #ff0202 !important;
    color: #fff !important;
    border: none;
    border-radius: 50px;
    font-weight: bold;
    text-transform: uppercase;
    transition: all 0.3s ease;
}
.btn-danger:hover {
    background-color: #cc0101 !important;
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(255, 2, 2, 0.4);
}

.btn-h {
    background-color: #007bff;
    color: #fff;
    font-weight: 600;
    border-radius: 50px;
    text-transform: uppercase;
    transition: all 0.3s ease;
}
.btn-h:hover {
    background-color: #0056b3;
    transform: translateY(-2px);
    box-shadow: 0 10px 15px rgba(0, 91, 187, 0.3);
}

.collapse {
    transition: all 0.4s ease;
}
</style>
{% endblock %}
