{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/stylebase.css') }}">
    <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
{% endblock %}

<nav class="navbar navbar-expand-lg glass-navbar sticky-top">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
            <i class="bi bi-droplet-fill text-primary fs-3 me-2"></i>
            <span class="fw-bold text-primary">HygieConnect</span>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
            aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" href="{{ path('app_home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_formations') }}">Formations</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_audit') }}">Audits</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_guide') }}">Guides</a>
                </li>
                <li class="nav-item ms-2">
                    <a class="btn btn-primary btn-sm px-4" href="{{ path('app_demande_new', {'new': 1}) }}">Demande de service</a>
                </li>

                {# Lien Dashboard uniquement pour les admins #}
                {% if app.user and is_granted('ROLE_ADMIN') %}
                    <li class="nav-item ms-3">
                        <a class="btn btn-success btn-sm px-4" href="{{ path('admin') }}">
                            <i class="bi bi-speedometer2 me-1"></i> Dashboard
                        </a>
                    </li>
                {% endif %}

                {# Bloc utilisateur connecté / non connecté #}
                {% if app.user %}
                    <li class="nav-item dropdown ms-3">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle me-1"></i>{{ app.user.nom }} {{ app.user.prenom }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="{{ path('app_profile') }}">Mon profil</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_mes_demandes') }}">Mes demandes</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-light btn-danger" href="{{ path('app_logout') }}">
                                    Déconnexion
                                </a>
                            </li>
                        </ul>
                    </li>
                {% else %}
                    <li class="nav-item ms-3">
                        <a class="btn btn-dark btn-sm px-4" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>