{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background: #f4f7f6;
        overflow-x: hidden;
        position: relative;
        height: 100vh;
    }

    /* Vagues animées bleu */
    .wave {
        position: absolute;
        width: 200%;
        height: 100%;
        left: -50%;
        top: 0;
        background: linear-gradient(135deg, #0f76fd 20%, #63a7ff 80%);
        opacity: 0.3;
        border-radius: 43% 57% 59% 41% / 36% 42% 58% 64%;
        animation: waveMove 10s linear infinite;
        z-index: -1;
    }

    .wave.wave2 {
        animation-duration: 15s;
        background: linear-gradient(135deg, #055ed1 20%, #0f76fd 80%);
        opacity: 0.25;
    }

    @keyframes waveMove {
        0% { transform: translateX(0) translateY(0) rotate(0deg); }
        50% { transform: translateX(25%) translateY(-10px) rotate(2deg); }
        100% { transform: translateX(0) translateY(0) rotate(0deg); }
    }

    .card-login {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.08);
        padding: 2rem;
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
    }

    h2 {
        font-weight: 600;
        color: #0f76fd;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .input-icon-wrapper {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .input-icon-wrapper i {
        position: absolute;
        top: 50%;
        left: 15px;
        transform: translateY(-50%);
        color: #adb5bd;
    }

    .input-icon-wrapper input {
        padding-left: 2.5rem;
        border-radius: 8px;
        border: 1px solid #ced4da;
        height: 45px;
        transition: all 0.3s ease;
    }

    .input-icon-wrapper input:focus {
        border-color: #0f76fd;
        box-shadow: 0 0 0 0.2rem rgba(15, 118, 253, 0.15);
    }

    .btn-login {
        background-color: #0f76fd;
        color: white;
        font-weight: 500;
        border-radius: 8px;
        height: 45px;
        transition: all 0.3s ease;
    }

    .btn-login:hover {
        background-color: #055ed1;
        color : white;
    }

    /* Lien d'inscription stylé comme un bouton */
    .btn-register-link {
        display: inline-block;
        margin-top: 1.5rem;
        padding: 0.5rem 1.5rem;
        border-radius: 25px;
        font-weight: 500;
        color: #0f76fd;
        border: 1px solid #0f76fd;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .btn-register-link:hover {
        background-color: #000000ff;
        color: white;
        text-decoration: none;
    }
</style>
{% endblock %}

{% block body %}
<div class="wave"></div>
<div class="wave wave2"></div>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card card-login">
                <h2>Connexion</h2>

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form method="post" action="{{ path('app_login') }}">
                    <div class="input-icon-wrapper">
                        <i class="bi bi-envelope"></i>
                        <input type="email" value="{{ last_username }}" name="email" class="form-control" placeholder="Email" required autofocus>
                    </div>

                    <div class="input-icon-wrapper">
                        <i class="bi bi-lock"></i>
                        <input type="password" name="password" class="form-control" placeholder="Mot de passe" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-grid">
                        <button type="submit" class="btn btn-login">Se connecter</button>
                    </div>
                </form>

                <div class="text-center">
                    <a href="{{ path('app_register') }}" class="btn-register-link">Pas encore inscrit ? S’inscrire</a>
                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
