{% extends 'base.html.twig' %}

{% block title %}Liste des prestations{% endblock %}

{% block body %}
<div class="prestations-wrapper">
    <!-- Top Navigation Bar -->
    <div class="top-bar">
        <div class="breadcrumb">
            <span class="breadcrumb-item">Dashboard</span>
            <i class="bi bi-chevron-right"></i>
            <span class="breadcrumb-item active">Prestations</span>
        </div>
        <button class="theme-toggle" id="themeToggle">
            <i class="bi bi-sun-fill sun-icon"></i>
            <i class="bi bi-moon-stars-fill moon-icon"></i>
        </button>
    </div>

    <!-- Main Content -->
    <div class="content-grid">
        <!-- Left Section: Header + Search -->
        <div class="left-section">
            <div class="page-header">
                <h1>Prestations</h1>
                <p class="subtitle">Gérez vos services et formations</p>
            </div>

            <div class="search-box">
                <i class="bi bi-search"></i>
                <input type="text" id="searchInput" placeholder="Rechercher...">
                <div class="search-line"></div>
            </div>

            <div class="stats-row">
                <div class="stat-card">
                    <div class="stat-icon formations">
                        <i class="bi bi-mortarboard"></i>
                    </div>
                    <div class="stat-info">
                        <span class="stat-label">Formations</span>
                        <span class="stat-value">7</span>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon guides">
                        <i class="bi bi-book"></i>
                    </div>
                    <div class="stat-info">
                        <span class="stat-label">Guides</span>
                        <span class="stat-value">4</span>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon audits">
                        <i class="bi bi-clipboard-check"></i>
                    </div>
                    <div class="stat-info">
                        <span class="stat-label">Audits</span>
                        <span class="stat-value">3</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Section: Action Button -->
        <div class="right-section">
            <a href="{{ path('admin_prestation_new') }}" class="create-btn">
                <span>Créer</span>
                <i class="bi bi-plus-lg"></i>
            </a>
        </div>
    </div>

    <!-- Data Table -->
    <div class="data-table">
        <table id="prestationsTable">
            <thead>
                <tr>
                    <th style="width: 60px;">
                        <span class="th-content">ID</span>
                    </th>
                    <th>
                        <span class="th-content">Titre de la prestation</span>
                    </th>
                    <th style="width: 140px;">
                        <span class="th-content">Catégorie</span>
                    </th>
                    <th style="width: 120px;">
                        <span class="th-content">Prix</span>
                    </th>
                    <th style="width: 150px;">
                        <span class="th-content">Durée</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for prestation in prestations %}
                <tr>
                    <td>
                        <span class="id-badge">#{{ prestation.id }}</span>
                    </td>
                    <td>
                        <span class="title-text">{{ prestation.titre }}</span>
                    </td>
                    <td>
                        <span class="tag tag-{{ prestation.categorie.nom|lower }}">
                            {{ prestation.categorie.nom }}
                        </span>
                    </td>
                    <td>
                        <span class="price">{{ prestation.prix|number_format(2, '.', ',') }} DT</span>
                    </td>
                    <td>
                        <span class="duration">
                            <i class="bi bi-clock"></i>
                            {{ prestation.duree }}
                        </span>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5" class="no-data">
                        <i class="bi bi-inbox"></i>
                        <p>Aucune prestation disponible</p>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="pagination">
        <button class="page-btn" disabled>
            <i class="bi bi-arrow-left"></i>
        </button>
        <div class="page-numbers">
            <button class="page-num active">1</button>
            <button class="page-num">2</button>
            <button class="page-num">3</button>
        </div>
        <button class="page-btn">
            <i class="bi bi-arrow-right"></i>
        </button>
    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', sans-serif;
        background: #0a0e27;
        color: #ffffff;
        line-height: 1.6;
        overflow-x: hidden;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    /* Light Mode */
    body.light-mode {
        background: #f8fafc;
        color: #1e293b;
    }

    body.light-mode .breadcrumb {
        color: #64748b;
    }

    body.light-mode .breadcrumb-item.active {
        color: #3b82f6;
    }

    body.light-mode .page-header h1 {
