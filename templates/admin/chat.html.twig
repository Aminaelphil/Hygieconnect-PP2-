{% extends 'base.html.twig' %}

{% block title %}Assistant IA - HygieConnect{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-image: url('{{ asset('images/background7.jpg') }}');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        background-attachment: fixed;
        font-family: "Segoe UI", Roboto, sans-serif;
    }

    .chat-container {
        max-width: 750px;
        margin: 50px auto;
        background: white;
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        height: 80vh;
        overflow: hidden;
    }

    .chat-header {
        background: #007bff;
        color: white;
        padding: 20px;
        text-align: center;
        font-size: 1.4rem;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .chat-box {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
        background: #f8f9fa;
        scroll-behavior: smooth;
    }

    .message {
        margin-bottom: 15px;
        display: flex;
        align-items: flex-start;
        gap: 10px;
    }

    .user-message {
        justify-content: flex-end;
    }

    .user-bubble, .ai-bubble {
        padding: 12px 16px;
        border-radius: 18px;
        max-width: 80%;
        word-wrap: break-word;
        font-size: 0.95rem;
        line-height: 1.5;
    }

    .user-bubble {
        background: #007bff;
        color: white;
        border-bottom-right-radius: 4px;
        animation: slideInRight 0.3s ease;
    }

    .ai-bubble {
        background: #e9ecef;
        color: #212529;
        border-bottom-left-radius: 4px;
        animation: slideInLeft 0.3s ease;
    }

    .typing {
        font-style: italic;
        color: #999;
    }

    .chat-input {
        display: flex;
        padding: 15px;
        background: #fff;
        border-top: 1px solid #dee2e6;
    }

    #message-input {
        flex: 1;
        border: 1px solid #ccc;
        border-radius: 25px;
        padding: 12px 18px;
        outline: none;
        transition: 0.2s;
    }

    #message-input:focus {
        border-color: #007bff;
        box-shadow: 0 0 4px rgba(0, 123, 255, 0.4);
    }

    #send-btn {
        background: #007bff;
        border: none;
        color: white;
        padding: 0 20px;
        border-radius: 25px;
        margin-left: 10px;
        transition: 0.2s;
    }

    #send-btn:hover {
        background: #0056b3;
    }

    @keyframes slideInLeft {
        from { transform: translateX(-20px); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
    }

    @keyframes slideInRight {
        from { transform: translateX(20px); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
    }

    /* Mobile */
    @media (max-width: 768px) {
        .chat-container {
            height: 90vh;
            border-radius: 0;
            margin: 0;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="chat-container">
    <div class="chat-header">
        ðŸ¤– Assistant IA â€“ HygieConnect
    </div>

    <div id="chat-box" class="chat-box"></div>

    <div class="chat-input">
        <input id="message-input" type="text" placeholder="Ã‰cris ta question ici..." autocomplete="off">
        <button id="send-btn">âž¤</button>
    </div>
</div>

<script>
const chatBox = document.getElementById('chat-box');
const input = document.getElementById('message-input');
const sendBtn = document.getElementById('send-btn');

// Affichage des messages
function appendMessage(role, text) {
    const msg = document.createElement('div');
    msg.classList.add('message', role === 'user' ? 'user-message' : 'ai-message');

    const bubble = document.createElement('div');
    bubble.classList.add(role === 'user' ? 'user-bubble' : 'ai-bubble');
    bubble.textContent = text;

    msg.appendChild(bubble);
    chatBox.appendChild(msg);
    chatBox.scrollTop = chatBox.scrollHeight;
    return bubble;
}

// Effet de frappe (typing)
async function typeText(element, text) {
    element.textContent = '';
    for (let i = 0; i < text.length; i++) {
        element.textContent += text.charAt(i);
        chatBox.scrollTop = chatBox.scrollHeight;
        await new Promise(resolve => setTimeout(resolve, 15)); // vitesse de frappe
    }
}

async function sendMessage() {
    const message = input.value.trim();
    if (!message) return;

    appendMessage('user', message);
    input.value = '';

    const typingBubble = appendMessage('ai', '...');
    typingBubble.classList.add('typing');

    try {
        const res = await fetch('/ask', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({ message })
        });

        const data = await res.json();

        typingBubble.remove();

        if (data.response) {
            const aiBubble = appendMessage('ai', '');
            await typeText(aiBubble, data.response);
        } else {
            appendMessage('ai', 'âš ï¸ Erreur : ' + (data.error || 'Inconnue'));
        }
    } catch (error) {
        typingBubble.remove();
        appendMessage('ai', 'âš ï¸ Erreur rÃ©seau');
    }
}

sendBtn.addEventListener('click', sendMessage);
input.addEventListener('keypress', e => {
    if (e.key === 'Enter') sendMessage();
});
</script>
{% endblock %}
