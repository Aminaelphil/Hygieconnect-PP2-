{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block stylesheets %}
<style>
    /* Vagues animées bleu */
    .wave {
        position: absolute;
        width: 200%;
        height: 100%;
        left: -50%;
        top: 0;
        background: linear-gradient(135deg, #0f76fd 20%, #63a7ff 80%);
        opacity: 0.15;
        border-radius: 43% 57% 59% 41% / 36% 42% 58% 64%;
        animation: waveMove 10s linear infinite;
        z-index: 0;
    }

    .wave.wave2 {
        animation-duration: 15s;
        background: linear-gradient(135deg, #055ed1 20%, #0f76fd 80%);
        opacity: 0.1;
    }

    @keyframes waveMove {
        0% { transform: translateX(0) translateY(0) rotate(0deg); }
        50% { transform: translateX(25%) translateY(-10px) rotate(2deg); }
        100% { transform: translateX(0) translateY(0) rotate(0deg); }
    }

    /* Header moderne */
    .page-header {
        position: relative;
        z-index: 10;
        text-align: center;
        margin-bottom: 3rem;
        padding-top: 2rem;
    }

    .page-header h1 {
        font-family: "Raleway", sans-serif;
        font-weight: 700;
        font-size: 3rem;
        color: #1a1a1a;
        margin-bottom: 0.5rem;
        letter-spacing: -0.5px;
    }

    .header-underline {
        width: 96px;
        height: 6px;
        background: linear-gradient(90deg, #007bff, #0056b3);
        margin: 0 auto 1rem;
        border-radius: 3px;
    }

    .page-header p {
        color: #4a5568;
        font-size: 1.125rem;
        margin: 0;
    }

    /* Container */
    .profile-container {
        position: relative;
        z-index: 10;
    }

    /* Card profil utilisateur */
    .profile-card-modern {
        position: relative;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .profile-card-modern::before {
        content: '';
        position: absolute;
        inset: -2px;
        background: linear-gradient(135deg, #007bff, #0056b3);
        border-radius: 20px;
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: -1;
    }

    .profile-card-modern:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 123, 255, 0.15);
    }

    .profile-card-modern:hover::before {
        opacity: 0.3;
    }

    /* Header avec avatar */
    .profile-header {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        padding: 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .profile-header::after {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        animation: shimmer 3s infinite;
    }

    @keyframes shimmer {
        0%, 100% { transform: translateX(0) translateY(0); }
        50% { transform: translateX(-30px) translateY(-30px); }
    }

    .profile-avatar {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #ffffff 0%, #e3f2fd 100%);
        border-radius: 50%;
        margin: 0 auto 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        font-weight: 700;
        color: #007bff;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        position: relative;
        z-index: 1;
    }

    .profile-name {
        color: white;
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0;
        position: relative;
        z-index: 1;
    }

    /* Corps de la card profil */
    .profile-body {
        padding: 2rem;
    }

    .profile-info-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        margin-bottom: 0.75rem;
        background: linear-gradient(90deg, rgba(0, 123, 255, 0.05) 0%, transparent 100%);
        border-radius: 12px;
        border-left: 3px solid #007bff;
        transition: all 0.2s ease;
    }

    .profile-info-item:hover {
        background: linear-gradient(90deg, rgba(0, 123, 255, 0.08) 0%, transparent 100%);
        transform: translateX(5px);
    }

    .profile-info-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #007bff, #0056b3);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .profile-info-icon svg {
        width: 20px;
        height: 20px;
        color: white;
    }

    .profile-info-content {
        flex: 1;
    }

    .profile-info-label {
        font-size: 0.75rem;
        color: #6b7280;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .profile-info-value {
        color: #1f2937;
        font-weight: 600;
        font-size: 0.9375rem;
    }

    /* Boutons actions profil */
    .profile-actions {
        padding: 0 2rem 2rem 2rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .btn-profile {
        padding: 0.875rem 1.5rem;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.9375rem;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .btn-profile:hover {
        transform: translateY(-2px);
    }

    .btn-profile-primary {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
    }

    .btn-profile-primary:hover {
        box-shadow: 0 6px 20px rgba(0, 123, 255, 0.4);
        color: white;
    }

    .btn-profile-outline {
        background: white;
        color: #007bff;
        border: 2px solid #007bff;
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.1);
    }

    .btn-profile-outline:hover {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        box-shadow: 0 6px 20px rgba(0, 123, 255, 0.3);
    }

    /* Section demandes récentes */
    .demandes-section {
        position: relative;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
    }

    .demandes-section::before {
        content: '';
        position: absolute;
        inset: -2px;
        background: linear-gradient(135deg, #007bff, #0056b3);
        border-radius: 20px;
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: -1;
    }

    .demandes-section:hover::before {
        opacity: 0.2;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #007bff;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .section-title::before {
        content: '';
        width: 4px;
        height: 30px;
        background: linear-gradient(180deg, #007bff, #0056b3);
        border-radius: 2px;
    }

    /* Carte demande dans profil */
    .demande-item {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        border: 1px solid #e5e7eb;
        transition: all 0.3s ease;
    }

    .demande-item:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 24px rgba(0, 123, 255, 0.12);
        border-color: #007bff;
    }

    .demande-item-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #f3f4f6;
    }

    .demande-number {
        font-size: 1.125rem;
        font-weight: 700;
        color: #1f2937;
    }

    /* Badge de statut */
    .status-badge-small {
        padding: 0.375rem 0.875rem;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
    }

    .status-badge-small.en-attente {
        background: linear-gradient(135deg, #fbbf24, #f59e0b);
        color: #78350f;
    }

    .status-badge-small.en-cours {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
    }

    .status-badge-small.acceptée {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
    }

    .status-badge-small.annulée {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
    }

    .status-badge-small.refusée {
        background: linear-gradient(135deg, #6b7280, #4b5563);
        color: white;
    }

    .status-badge-small.terminée {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
    }

    .demande-info-row {
        display: flex;
        align-items: flex-start;
        gap: 0.5rem;
        margin-bottom: 0.75rem;
        font-size: 0.875rem;
    }

    .demande-info-row strong {
        color: #6b7280;
        min-width: 80px;
    }

    .demande-info-row span {
        color: #1f2937;
        font-weight: 500;
    }

    /* Boutons dans demande item */
    .demande-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid #f3f4f6;
    }

    .btn-demande {
        flex: 1;
        padding: 0.625rem 1rem;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.8125rem;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        text-align: center;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.375rem;
    }

    .btn-demande:hover {
        transform: translateY(-2px);
    }

    .btn-demande-download {
        background: white;
        color: #007bff;
        border: 2px solid #007bff;
    }

    .btn-demande-download:hover {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
    }

    .btn-demande-cancel {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.2);
    }

    .btn-demande-cancel:hover {
        box-shadow: 0 6px 16px rgba(239, 68, 68, 0.4);
        color: white;
    }

    /* Message vide */
    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        border-radius: 16px;
        border: 2px dashed #cbd5e1;
    }

    .empty-state p {
        color: #6b7280;
        font-size: 1rem;
        margin: 0;
    }

    /* Responsive */
    @media (max-width: 992px) {
        .page-header h1 {
            font-size: 2.5rem;
        }
    }

    @media (max-width: 768px) {
        .page-header h1 {
            font-size: 2rem;
        }

        .demande-actions {
            flex-direction: column;
        }

        .btn-demande {
            width: 100%;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="wave"></div>
<div class="wave wave2"></div>

<div class="container py-5">
    <div class="page-header">
        <h1>Mon Espace</h1>
        <div class="header-underline"></div>
        <p>Gérez votre profil et vos demandes</p>
    </div>

    <div class="row g-4 profile-container">
        <!-- Carte Profil -->
        <div class="col-lg-4 col-md-12">
            <div class="profile-card-modern">
                <!-- Header avec avatar -->
                <div class="profile-header">
                    <div class="profile-avatar">
                        {{ app.user.prenom|slice(0, 1)|upper }}{{ app.user.nom|slice(0, 1)|upper }}
                    </div>
                    <h2 class="profile-name">{{ app.user.prenom }} {{ app.user.nom }}</h2>
                </div>

                <!-- Informations profil -->
                <div class="profile-body">
                    <div class="profile-info-item">
                        <div class="profile-info-icon">
                            <svg fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                        <div class="profile-info-content">
                            <div class="profile-info-label">Nom complet</div>
                            <div class="profile-info-value">{{ app.user.nom }} {{ app.user.prenom }}</div>
                        </div>
                    </div>

                    <div class="profile-info-item">
                        <div class="profile-info-icon">
                            <svg fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                            </svg>
                        </div>
                        <div class="profile-info-content">
                            <div class="profile-info-label">Email</div>
                            <div class="profile-info-value">{{ app.user.email }}</div>
                        </div>
                    </div>

                    {% if app.user.telephone %}
                        <div class="profile-info-item">
                            <div class="profile-info-icon">
                                <svg fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                                </svg>
                            </div>
                            <div class="profile-info-content">
                                <div class="profile-info-label">Téléphone</div>
                                <div class="profile-info-value">{{ app.user.telephone }}</div>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- Actions -->
                <div class="profile-actions">
                    <a href="{{ path('app_mes_demandes') }}" class="btn-profile btn-profile-primary">
                        <svg width="18" height="18" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
                            <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
                        </svg>
                        Mes demandes
                    </a>
                    <a href="{{ path('app_profile_edit') }}" class="btn-profile btn-profile-outline">
                        <svg width="18" height="18" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                        </svg>
                        Modifier mon profil
                    </a>
                </div>
            </div>
        </div>

        <!-- Section Demandes récentes -->
        <div class="col-lg-8 col-md-12">
            <div class="demandes-section">
                <h3 class="section-title">Mes demandes récentes</h3>
                
                {% if app.user.demandes|length == 0 %}
                    <div class="empty-state">
                        <svg style="width: 64px; height: 64px; margin: 0 auto 1rem; color: #cbd5e1;" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
                            <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
                        </svg>
                        <p>Vous n'avez encore créé aucune demande.</p>
                    </div>
                {% else %}
                    <div class="demandes-list">
                        {% for demande in app.user.demandes %}
                            {% set statut = demande.statut %}
                            
                            <div class="demande-item">
                                <div class="demande-item-header">
                                    <h4 class="demande-number">Demande N°{{ demande.id }}</h4>
                                    <span class="status-badge-small {{ statut }}">
                                        {{ statut|capitalize }}
                                    </span>
                                </div>

                                <div class="demande-info-row">
                                    <strong>Date :</strong>
                                    <span>{{ demande.datedemande|date('d/m/Y H:i') }}</span>
                                </div>

                                <div class="demande-info-row">
                                    <strong>Adresse :</strong>
                                    <span>{{ demande.adresseprestation }}</span>
                                </div>

                                <div class="demande-actions">
                                    {% if demande.devisestime %}
                                        <a href="{{ path('app_demande_pdf', {'id': demande.id}) }}" 
                                           class="btn-demande btn-demande-download" target="_blank">
                                            <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                            </svg>
                                            Télécharger Devis
                                        </a>
                                    {% endif %}

                                    {% if statut != 'annulée' and statut != 'acceptée' and statut != 'refusée' %}
                                        <form action="{{ path('app_demande_annuler', {'id': demande.id}) }}" method="post" style="flex: 1;">
                                            <button type="submit" class="btn-demande btn-demande-cancel" style="width: 100%;"
                                                    onclick="return confirm('Voulez-vous vraiment annuler cette demande ?');">
                                                <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                                </svg>
                                                Annuler
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}